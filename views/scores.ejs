<div class="container-fluid">
  <div class="row">
    <h2>Scores of the round</h2>
  </div>
  <div class="row">
    <div class="card" style="max-width: 18rem" v-for="player in leaderboard">
      <div class="card-body">
        <h5 class="card-title">{{ player.name }}</h5>
        <p class="card-text">Scored {{ player.score }} points.</p>
      </div>
    </div>
  </div>
</div>
