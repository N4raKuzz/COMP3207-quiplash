<div class="container-fluid">
  <div class="card mb-3 p-0">
    <div class="card-header">Please add a prompt</div>
    <div class="card-body">
      <h5 class="card-title">Prompt</h5>
      <input
        type="text"
        class="form-control"
        @keyup.enter="prompt_create"
        v-model="prompt"
      />
      <button type="submit" class="btn btn-primary" @click="prompt_create">
        Submit
      </button>
      <div v-if="isAdmin">
        <button class="btn btn-primary" @click="next">Next</button>
      </div>
      <div v-else-if="!isAudience">
        <button class="btn btn-primary" @click="finish">Finish</button>
      </div>
    </div>
  </div>
</div>
